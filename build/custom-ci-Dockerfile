FROM openshift/origin-release:golang-1.14

RUN yum -y install epel-release --disablerepo=epel && yum clean all

RUN yum -y install python3-pip && yum clean all

RUN pip3 install --upgrade pip

RUN yum -y install ansible

RUN yum install -y python3-devel gcc

RUN yum install -y python3-wheel

RUN pip3 install -U setuptools

RUN pip3 install -U molecule 

RUN pip3 install -U jmespath 

RUN pip3 install -U openshift

RUN pip3 install -U more-itertools 

RUN chmod g+rw /etc/passwd

ENV LC_ALL=en_US.utf-8

ENV LANG=en_US.utf-8